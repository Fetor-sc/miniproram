.main-container {
    display: flex;
    flex-direction: column;
    margin: 20rpx 0 40rpx 0;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
}

.main-author-date {
    margin: 10rpx 0 20rpx 10rpx;
}


/* 头像图片样式 */

.main-author {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
    /* 图像居中 */
}


/* 头像文字 */

.main-date {
    margin-top: 20rpx;
    vertical-align: middle;
    margin-bottom: 5px;
    font-size: 26rpx
}

.main-title {
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    margin-left: 10px;
}

.main-image {
    margin-left: 16px;
    width: 100%;
    height: 340rpx;
    margin: auto 0;
    margin-bottom: 15px;
}

.main-content {
    color: #666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}

.main-like {
    /* 制定行方向排列 */
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
}

.main-like-image {
    height: 16px;
    width: 16px;
    margin-right: 8px;
    vertical-align: middle;
}

.main-like-font {
    vertical-align: middle;
    margin-right: 20px;
}